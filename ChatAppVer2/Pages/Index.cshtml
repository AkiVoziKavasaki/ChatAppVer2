@page
<div class="container">
    
    <ul id="messagesList" class="chatMain"></ul>    

    <div class="controlPanel">
        <div class="row p-1">
            <div class="col-1">User</div>
            <div class="col-5"><input type="text" id="userInput" /></div>
        </div>
        <div class="row p-1">
            <div class="col-1">Message</div>
            <div class="col-5"><input type="text" class="w-100" id="messageInput" /></div>
        </div>
        <div class="row p-1">
            <div class="col-6 text-end">
                <input type="button" id="sendButton" value="Send Message" />
            </div>
        </div>
        <div class="img-row">
            <button id="s_hi" class="image-button" disabled>
                <img style="height:40px;" src="imgs/s_hi.png" alt="Button image">
            </button>
            <button id="s_bye" class="image-button" disabled>
                <img style="height:40px;" src="imgs/s_bye.png" alt="Button image">
            </button>
            <button id="s_ok" class="image-button" disabled>
                <img style="height:40px;" src="imgs/s_ok.png" alt="Button image">
            </button>
            <button id="s_yes" class="image-button" disabled>
                <img style="height:40px;" src="imgs/s_yes.png" alt="Button image">
            </button>
            <button id="s_no" class="image-button" disabled>
                <img style="height:40px;" src="imgs/s_no.png" alt="Button image">
            </button>
        </div>
    </div>
</div>

<audio id="notification">
    <source src="~/msg_received.mp3" type="audio/mpeg">
</audio>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>